    // "i18n-ally.localesPaths": [
    //     "public/locales",
    //     "src/shared/config/i18n"
    // ],
    // "i18n-ally.keystyle": "flat",
    // "i18n-ally.localesPaths": [
    //     "public/locales",
    //     "src/shared/config/i18n"
